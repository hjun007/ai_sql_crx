{
  "manifest_version": 3,
  "name": "AI SQL",
  "version": "1.0.0",
  "description": "AI SQL Helper",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],


  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["chatWindow.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chatWindow.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
  }
}
